generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model UserProfile {
  id        Int      @id @default(autoincrement())
  authId    Int?     @unique
  createdAt DateTime @default(now())
  email     String   @unique
  username  String   @unique
  avatarUrl String

  friendsOf Friendship[] @relation("user")
  friends   Friendship[] @relation("friend")
}

model Friendship {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  
  userId    Int
  user      UserProfile @relation("user", fields: [userId], references: [id], onDelete: Cascade)
  
  friendId  Int
  friend    UserProfile @relation("friend", fields: [friendId], references: [id], onDelete: Cascade)
  
  @@unique([userId, friendId])
}